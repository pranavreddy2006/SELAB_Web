pipeline {
    agent any
    tools{
        maven 'MAVEN-HOME'
    }
    stages {
        stage('git repo & clean') {
            steps {
                //bat "rmdir  /s /q mavenjava"
                bat "git clone provide your github link"
                bat "mvn clean -f mavenjava"
            }
        }
        stage('install') {
            steps {
                bat "mvn install -f mavenjava" #project name#
            }
        }
        stage('test') {
            steps {
                bat "mvn test -f mavenjava"
            }
        }
        stage('package') {
            steps {
                bat "mvn package -f mavenjava"
            }
        }
    }
}


or


pipeline {
    agent any

    tools {
        maven 'MAVEN-HOME'   // Make sure this name is configured in Jenkins
    }

    stages {
        stage('Checkout Repo') {
            steps {
                git url: 'https://github.com/pranavreddy2006/SELAB_Java.git'
            }
        }

        stage('Clean') {
            steps {
                bat "mvn clean -f pom.xml"
            }
        }

        stage('Install') {
            steps {
                bat "mvn install -f pom.xml"
            }
        }

        stage('Test') {
            steps {
                bat "mvn test -f pom.xml"
            }
        }

        stage('Package') {
            steps {
                bat 'mvn package -f pom.xml'
            }
        }
    }
}


or


pipeline {
    agent any

    tools {
        jdk 'JAVA_HOME'
        maven 'MAVEN_HOME'
    }

    stages {

        stage('git repo & clean') {
            steps {
                // Delete old folder if it exists
                bat "rmdir /s /q SELAB_Using_Script || exit 0"

                // Clone your GitHub repo
                bat "git clone https://github.com/pranavreddy2006/SELAB_Using_Script.git"

                // Clean using pom.xml in your folder
                bat "mvn clean -f SELAB_Using_Script/pom.xml"
            }
        }

        stage('install') {
            steps {
                bat "mvn install -f SELAB_Using_Script/pom.xml"
            }
        }

        stage('test') {
            steps {
                bat "mvn test -f SELAB_Using_Script/pom.xml"
            }
        }

        stage('package') {
            steps {
                bat "mvn package -f SELAB_Using_Script/pom.xml"
            }
        }
    }
}

